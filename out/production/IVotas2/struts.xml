<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />
    <constant name="struts.ui.theme" value="simple" />
    <constant name="struts.action.excludePattern" value="/ws"/>

    <package name="IVoto2" extends="struts-default">

        <interceptors>
            <interceptor name="sessionInterceptor" class="Interceptors.SessionInterceptor" />
            <interceptor-stack name="sessionStack">
                <interceptor-ref name="sessionInterceptor" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>

        <default-interceptor-ref name="sessionStack" />

        <default-action-ref name="index" />

        <global-results>
            <result name="error"> WEB-INF/Error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>

        <action name="index" class="Actions.Action" method="execute">
            <result name="success">index.jsp</result>
        </action>

        <!-- ////////////////////// TCP //////////////////////-->

        <action name="login" class="Actions.UserAction" method="login">
            <interceptor-ref name="defaultStack" />
            <result name="admin"> WEB-INF/admin.jsp </result>
            <result name="success">WEB-INF/platform.jsp</result>
            <result name="error">index.jsp</result>
        </action>

        <action name="logout" class="Actions.UserAction" method="logout">
            <result name="success"> index.jsp </result>
        </action>

        <action name="loginFacebook" class="Actions.UserAction" method="loginFacebook">
            <interceptor-ref name="defaultStack" />
            <result name="success">WEB-INF/platform.jsp</result>
            <result name="error">WEB-INF/Facebook/facebookError.jsp</result>
        </action>

        <action name="linkFacebook" class="Actions.UserAction" method="linkFacebook">
            <result name="success">WEB-INF/platform.jsp</result>
            <result name="error">WEB-INF/Facebook/facebookLinkError.jsp</result>
        </action>

        <action name="unlinkFacebook" class="Actions.UserAction" method="unlinkFacebook">
            <result name="success">WEB-INF/platform.jsp</result>
            <result name="error">WEB-INF/Facebook/facebookLinkError.jsp</result>
        </action>

        <action name="showListsFromElection" class="Actions.UserAction" method="showListas">
            <result name="success"> WEB-INF/lists.jsp </result>
        </action>

        <action name="vote" class="Actions.UserAction" method="vote">
            <result name="success">WEB-INF/platform.jsp</result>
            <result name="error">WEB-INF/platform.jsp</result>
        </action>


        <!-- //////////////////////////// ADMIN CONSOLE //////////////////////////// -->

        <!-- Utilizador -->

        <action name="addUser" class="Actions.UserAction" method="execute">
            <result name="success"> WEB-INF/Users/createUser.jsp </result>
        </action>

        <action name="createUser" class="Actions.UserAction" method="create">
            <result name="success">WEB-INF/admin.jsp</result>
            <result name="error"> WEB-INF/Users/createUser.jsp </result>
        </action>

        <action name="showAllUsers" class="Actions.UserAction" method="showAll">
            <result name="success"> WEB-INF/Users/showAll.jsp </result>

        </action>

        <action name="showUserDetails" class="Actions.UserAction" method="show">
            <result name="success"> WEB-INF/Users/readUser.jsp </result>
        </action>

        <action name="updateUser" class="Actions.UserAction" method="updateUtilizador">
            <result name="success">WEB-INF/admin.jsp</result>
            <result name="error"> showUserDetails.action </result>
        </action>

        <action name="showUserVoteDetails" class="Actions.UserAction" method="showVoteDetails">
            <result name="success"> WEB-INF/Users/showVoteDetails.jsp </result>
        </action>

        <action name="postElectionFacebook" class="Actions.UserAction" method="postElectionFacebook">
            <result name="success">WEB-INF/platform.jsp</result>
            <!--<result name="error"> showUODetails.action </result>-->
        </action>

        <!-- Unidade Organica -->
        <action name="addUO" class="Actions.UnidadeOrganicaAction" method="execute">
            <result name="success"> WEB-INF/UnidadesOrganicas/createUO.jsp </result>
        </action>

        <action name="createUO" class="Actions.UnidadeOrganicaAction" method="create">
            <result name="success">WEB-INF/admin.jsp</result>
            <result name="error"> WEB-INF/UnidadesOrganicas/createUO.jsp </result>
        </action>

        <action name="showAllUO" class="Actions.UnidadeOrganicaAction" method="showAll">
            <result name="success"> WEB-INF/UnidadesOrganicas/showAll.jsp </result>
        </action>

        <action name="showUODetails" class="Actions.UnidadeOrganicaAction" method="show">
            <result name="success"> WEB-INF/UnidadesOrganicas/readUO.jsp</result>
        </action>

        <action name="alterUO" class="Actions.UnidadeOrganicaAction" method="show">
            <result name="success">WEB-INF/admin.jsp</result>
            <result name="error"> showUODetails.action </result>
        </action>
        <!-- Eleicao -->

        <action name="addEleicao" class="Actions.EleicaoAction" method="execute">
            <result name="success"> WEB-INF/Elections/createElection.jsp</result>
        </action>

        <action name="createEleicao" class="Actions.EleicaoAction" method="create">
            <result name="success">WEB-INF/admin.jsp</result>
            <result name="error"> addEleicao.action </result>
        </action>

        <action name="showEleicaoDetails" class="Actions.EleicaoAction" method="show">
            <result name="success"> WEB-INF/Elections/readElection.jsp </result>
        </action>

        <action name="showAllEleicoes" class="Actions.EleicaoAction" method="showAll">
            <result name="success"> WEB-INF/Elections/showAll.jsp </result>
        </action>

        <action name="updateEleicao" class="Actions.EleicaoAction" method="updateEleicao">
            <result name="success">WEB-INF/admin.jsp</result>
            <result name="error"> WEB-INF/Elections/showAll.jsp </result>
        </action>

        <action name="showEleicaoResultados" class="Actions.EleicaoAction" method="showResultados">
            <result name="success"> WEB-INF/Elections/showResults.jsp</result>
        </action>

        <action name="showEleicoesPassadas" class="Actions.EleicaoAction" method="showPast">
            <result name="success"> WEB-INF/Elections/showAllPast.jsp </result>
        </action>

        <!-- Mesa de Voto -->
        <action name="addMesaVoto" class="Actions.MesaVotoAction" method="execute">
            <result name="success"> WEB-INF/MesasDeVoto/createMesaVoto.jsp </result>
        </action>

        <action name="createMesaVoto" class="Actions.MesaVotoAction" method="create">
            <result name="success">WEB-INF/admin.jsp</result>
            <result name="error"> WEB-INF/MesasDeVoto/createMesaVoto.jsp </result>
        </action>

        <action name="showMesaVotoDetails" class="Actions.MesaVotoAction" method="show">
            <result name="success"> WEB-INF/MesasDeVoto/readMesaVoto.jsp </result>
        </action>

        <action name="showAllMesas" class="Actions.MesaVotoAction" method="show">
            <result name="success"> WEB-INF/MesasDeVoto/showAll.jsp </result>
        </action>

        <!-- Lista -->
        <action name="addLista" class="Actions.ListaAction" method="execute">
            <result name="success"> WEB-INF/Listas/createLista.jsp </result>
        </action>

        <action name="createLista" class="Actions.ListaAction" method="create">
            <result name="success">WEB-INF/admin.jsp</result>
            <result name="error"> WEB-INF/Listas/createLista.jsp </result>
        </action>

        <action name="showListaDetails" class="Actions.ListaAction" method="show">
            <result name="success"> WEB-INF/Listas/readLista.jsp </result>
        </action>

        <action name="showAllListas" class="Actions.ListaAction" method="showAll">
            <result name="success"> WEB-INF/Listas/showAll.jsp </result>
        </action>

    </package>
</struts>